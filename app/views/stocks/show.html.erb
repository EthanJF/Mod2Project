<h1><%= @stock.name %> (<%= @stock.ticker %>)</h1>

<h2>Current Price: <%= number_to_currency(@stock.initial_value)  %></h2>
<h2>Shares Left: <%=@stock.current_quantity  %></h2>

<br>
<h3>Investors Who Have This Stock: </h3>

<ul>
<% @stock.users.uniq.each do |user| %>
  <li><%= user.username %></li>
<% end %>
</ul>

  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p style="color:red"><%=error %></p>
      <% end %>
  <% end %>

<% if @current_user != nil%>
<%= form_for @stock_pick do |f| %>
    <%= f.hidden_field :stock_id, value: @stock.id %><br>

    <%= f.hidden_field :user_id, value: @current_user.id %><br>

    <%= f.label 'Amount of Shares' %><br>
    <%= f.number_field :quantity, min:1, step: 0 %><br>


    <%= f.hidden_field :value, value: @stock.initial_value %><br>

    <%= f.submit "Buy Stock" %>
<% end %>
<% else %>
<h1>You must be logged in to buy stocks!</h1>
<% end %>
